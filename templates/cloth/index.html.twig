{% extends 'base.html.twig' %}

{% block title %}Cloth index{% endblock %}

{% block body %}
    <div class="container col-md-10">
        <h1>Cloth index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for cloth in cloths %}
                <tr>
                    <td>{{ cloth.id }}</td>
                    <td>{{ cloth.title }}</td>
                    <td>{{ cloth.Description }}</td>
                    <td>{{ cloth.Price }}</td>
                    <td>
                        <a href="{{ path('app_cloth_show', {'id': cloth.id}) }}" class="btn btn-main">show</a>
                        <a href="{{ path('app_cloth_edit', {'id': cloth.id}) }}" class="btn btn-main">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_cloth_new') }}" class="btn btn-main mt-1 mb-3">Create new</a>
    </div>
{% endblock %}
